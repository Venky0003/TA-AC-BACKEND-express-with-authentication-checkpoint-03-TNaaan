<%- include('partials/header') %>
<section class="full-body padding-top">
  <div class="container full-display">
    <div class="color-card padding-top-85 margin-center text-center">
      <h2 class="fs-25">Forgot Password</h2>
      <% if (message) { %>
      <p class="red"><%= message %></p>
      <% } %>
      <form action="/users/forgot-password" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />
        <button type="submit">Reset Password</button>
      </form>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
